# Application
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3002

# Database
# Use your local port (e.g. 27018) and credentials
MONGO_URL=mongodb://admin:password123@localhost:27018/secure_cloud?authSource=admin

# Authentication
JWT_SECRET=your_super_secret_jwt_key
JWT_REFRESH_SECRET=your_super_secret_refresh_key

# Amazon S3 / Cloud Storage
STORAGE_STRATEGY=aws # or 'local'
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=your_s3_bucket_name

# Hyperledger Fabric Blockchain
FABRIC_CONNECTION_PROFILE_PATH=./connection.json
FABRIC_WALLET_PATH=./wallet
FABRIC_USER=appUser
FABRIC_CHANNEL_NAME=mychannel
FABRIC_CHAINCODE_NAME=secure-file-registry

# AI Engine
