{
  "compilerOptions": {
    "module": "node16",
    "target": "es2020",
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node16",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}